@model BabyMemory.Infrastructure.Data.Models.User
@{
    ViewData["Title"] = "Edit User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="@Model!.UserFullName" class="form-control" autocomplete="name" aria-required="true" />
                <label asp-for="@Model!.UserFullName"></label>
                <span asp-validation-for="@Model!.UserFullName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="@Model!.UserName" class="form-control" autocomplete="UserName" aria-required="true" />
                <label asp-for="@Model!.UserName"></label>
                <span asp-validation-for="@Model!.UserName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="@Model!.Email" class="form-control" autocomplete="Email" aria-required="true" />
                <label asp-for="@Model!.Email"></label>
                <span asp-validation-for="@Model!.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="@Model!.Picture" class="form-control" autocomplete="picture" aria-required="false" />
                <label asp-for="@Model!.Picture"></label>
                <span asp-validation-for="@Model!.Picture" class="text-danger"></span>
            </div>
            
            <button id="editUser" type="submit" class="w-100 btn btn-lg btn-primary">Edit</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

