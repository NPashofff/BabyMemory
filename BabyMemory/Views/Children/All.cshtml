@model BabyMemory.Infrastructure.Models.ChildrenViewModel[];

<div>
    <h1>Children</h1>
    <a href="/Children/Add" class="btn btn-info text-uppercase">Add Child</a>
</div>
<div class="row col-9">
    @foreach (var item in Model)
    {
        <div class="card col-12 col-lg-auto">
            <img src="@item.Picture"
             class="img-fluid rounded" data-toggle="tooltip"
             data-placement="bottom" title="Title">
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-center">@(item.Name + " " + item.LastName)</li>
                    <li class="list-group-item text-center">@item.BirthDate</li>
                </ul>
                <a href="/Children/Delete?id=@item.Id" class="btn-danger btn">Delete</a>
            </div>
        </div>
    }
</div>
