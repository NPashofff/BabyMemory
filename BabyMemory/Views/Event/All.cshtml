@using BabyMemory.Infrastructure.Shared
@model ICollection<EventViewModel>
@{
    ViewData["Title"] = "All Events";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Events</h1>

<div class="text-center">
    <section class="content">
        <div><h2>Upcoming Events</h2></div>
        <div class="container-fluid">
            <a href="/Event/MyEvents" class="btn btn-primary btn-sm">My Events</a>
            <a href="/Event/Create" class="btn btn-dark btn-sm">Create</a>
            @if (User.IsInRole(GlobalConstants.Administrator))
            {
                <a href="/Administrator/AllEvents" class="btn btn-danger btn-sm">All Event</a>
            }
            <div class="row">
                <div class="col-md-12">
                    <div class="timeline">
                        @foreach (var item in Model.OrderBy(x => x.CreationDate))
                        {
                            <div class="time-label">
                                <i class="fas fa-clock bg-gray"></i>
                                <span class="bg-blue">@item.EventDate.ToString("D")</span>
                            </div>
                            <div>
                                <div class="timeline-item">
                                    <span class="time"><i class="fas fa-clock"></i>@item.EventDate.ToString("HH:mm")</span>
                                    <h3 class="timeline-header"><b>@item.Name</b></h3>

                                    <div class="timeline-body">
                                        @item.Description
                                    </div>
                                    <div class="timeline-footer">
                                    </div>
                                </div>
                            </div>
                        }
                        <div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
