@model ICollection<EventViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <section class="content">
        <div class="container-fluid">
            <a class="btn btn-primary btn-sm">Edit</a>
            <a class="btn btn-danger btn-sm">Create</a>
            <!-- Timelime example  -->
            <div class="row">
                <div class="col-md-12">
                    <!-- The time line -->
                    <div class="timeline">

                        @foreach (var item in Model.OrderBy(x => x.CreationDate))
                        {
                            <!-- timeline time label -->
                            <div class="time-label">
                                <span class="bg-red">@item.EventDate</span>
                            </div>
                            <!-- /.timeline-label -->
                            <!-- timeline item -->
                            <div>
                                <i class="fas fa-envelope bg-blue"></i>
                                <div class="timeline-item">
                                    <span class="time"><i class="fas fa-clock"></i>@item.EventDate.ToString("HH:mm")</span>
                                    <h3 class="timeline-header">@item.Name</h3>

                                    <div class="timeline-body">
                                        @item.Description
                                    </div>
                                    <div class="timeline-footer">
                                        
                                    </div>
                                </div>
                            </div>
                            <!-- END timeline item -->
                        }
                        <!-- timeline time label -->
                        <!-- Clock  -->
                        <div>
                            <i class="fas fa-clock bg-gray"></i>
                        </div>
                    </div>
                </div>
                <!-- /.col -->
            </div>
        </div>
        <!-- /.timeline -->

    </section>
</div>
