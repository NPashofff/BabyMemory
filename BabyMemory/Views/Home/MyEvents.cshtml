@model ICollection<EventViewModel>
@{
    ViewData["Title"] = "My Events";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>My Events</h1>

    <div class="card-body">
        <div id="example1_wrapper" class="dataTables_wrapper dt-bootstrap4">
                <div class="col-sm-12">
                    <table id="example1" class="table table-bordered table-striped dataTable dtr-inline" aria-describedby="example1_info">
                        <thead>
                            <tr><th class="sorting sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending">Event Name</th><th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Edit: activate to sort column ascending">Event Date</th><th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="User Type: activate to sort column ascending">Event Type</th><th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Engine version: activate to sort column ascending">Edit</th><th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending">Delete</th></tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="odd">
                                    <td class="dtr-control sorting_1" tabindex="0">@item.Name</td>
                                    <td>@item.EventDate</td>
                                    <td>@(item.IsPublic == true ? "Public" : "Privet")</td>
                                    <td><a href="/Home/Edit?eventId=@item.Id" class="btn btn-block btn-warning btn-sm">Edit Event</a></td>
                                    <td><a href="/Home/Remove?eventId=@item.Id" class="btn btn-block btn-danger btn-sm">Remove Event</a></td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            @*<tr><th rowspan="1" colspan="1">User Name</th><th rowspan="1" colspan="1">Edit User</th><th rowspan="1" colspan="1">User Type</th><th rowspan="1" colspan="1">Engine version</th><th rowspan="1" colspan="1">CSS grade</th></tr>*@
                        </tfoot>
                    </table>
                </div>
