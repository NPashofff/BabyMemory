@model BabyMemory.Infrastructure.Data.Models.Memory
@{
    ViewData["Title"] = "Edit Memory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Edit Memory</h1>

<div class="row">
    <div class="col-md-4">
        <form id="memoryForm" asp-route-returnUrl="@Model" method="post">
            <h2>Edit Memory.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="@Model!.Name"  class="form-control" autocomplete="name" aria-required="true" />
                <label asp-for="@Model!.Name"></label>
                <span asp-validation-for="@Model!.Name" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="@Model!.Description" class="form-control" autocomplete="description" aria-required="false" />
                <label asp-for="@Model!.Description"></label>
                <span asp-validation-for="@Model!.Description" class="text-danger"></span>

            </div>
            <div class="form-floating">
                <input asp-for="@Model!.CreationDate" class="form-control" autocomplete="creationDate" aria-required="true" />
                <label asp-for="@Model!.CreationDate"></label>
                <span asp-validation-for="@Model!.CreationDate" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="@Model!.Picture" class="form-control" autocomplete="picture" aria-required="false" />
                <label asp-for="@Model!.Picture" style="font-size: small"></label>
                <span asp-validation-for="@Model!.Picture" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="@Model!.Id" class="form-control" autocomplete="picture" aria-required="false" readonly />
                <label asp-for="@Model!.Id"></label>
                <span asp-validation-for="@Model!.Id" class="text-danger"></span>
            </div>
            <button  id="memoryEdit" type="submit" value="Edit" name="submitButton" class="w-100 btn btn-lg btn-primary">Edit Memory</button>
            <button  id="memoryDelete" type="submit" value="Delete" name="submitButton" class="w-100 btn btn-lg btn-danger">Delete</button>
        </form>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}