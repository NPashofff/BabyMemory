@model BabyMemory.Infrastructure.Models.AddNewsViewModel
@{
    ViewData["Title"] = "Add News";
}

<h1>@ViewData["Title"]</h1>


@*<div class="col-md-4">*@
    <form id="newserForm" asp-route-returnUrl="@Model" method="post">
        <h2>Create a new news.</h2>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-floating">
            <input asp-for="@Model!.Name" class="form-control" autocomplete="name" aria-required="true" />
            <label asp-for="@Model!.Name"></label>
            <span asp-validation-for="@Model!.Name" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <textarea asp-for="@Model!.Description" class="form-control" autocomplete="desciption" aria-required="true"></textarea>
            <label  asp-for="@Model!.Description"></label>
            <span asp-validation-for="@Model!.Description" class="text-danger"></span>
        </div>
        @*<div class="form-floating">
            <label>Contentn</label>
            <textarea class="form-control" rows="6" placeholder="Enter ..."></textarea>
        </div>*@
        
        <button id="addNewsSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Add News</button>
    </form>
@*</div>*@


@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
